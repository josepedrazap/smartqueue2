  <body>

  <div class="container .text-justify">
    <div class="row">
      <h2 class=".text-justify">Queue</h2>
    </div>
  </div>

    <div class="container">
    <table class="table table-striped table-dark table-hover">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Id usuario</th>
          <th scope="col">Hora de llegada</th>
          <th scope="col">Tiempo promedio de espera</th>
          <th scope="col">NÃºmero</th>
          <th scope="col">Opciones</th>
        </tr>
      </thead>
      <tbody>
        <% for(var i=0; i<queue.length; i++) {%>

        <tr>
          <td><%= queue[i].id_user %></td>
          <td><%= queue[i].arrive.getHours()	%> : <%= queue[i].arrive.getMinutes()	%> : <%= queue[i].arrive.getSeconds()	%></td>
          <td><%= queue[i].arrive	%></td>
          <td><%= queue[i].number %></td>
          <td>
            <button type="button" class="btn btn-danger" name="button"><i class="fas fa-trash-alt"></i></button>
          </td>
        </tr>

        <% } %>
      </tbody>

    </table>
  </div>
  </body>
